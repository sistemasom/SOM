<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <!-- DEPARTAMENTOS -->
        <!-- DEPARTAMENTOS -->

        <FrameLayout
            android:id="@+id/atrDeptos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.50"
                    android:text="Categoría del edificio:" />

                <Spinner
                    android:id="@+id/cbCategoria"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:padding="9dp"
                    android:entries="@array/categorias"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.50"
                    android:text="Tipo de unidad:" />

                <Spinner
                    android:id="@+id/cbTipoUnidad"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:padding="9dp"
                    android:entries="@array/tipoDepto"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="130dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.50"
                    android:text="Ubicación en planta:" />

                <Spinner
                    android:id="@+id/cbUbiPlanta"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:entries="@array/ubPlanta"
                    android:padding="9dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="190dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.50"
                    android:text="Cantidad de cocheras:" />

                <Spinner
                    android:id="@+id/cbCantCoch"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:entries="@array/cantCoch"
                    android:padding="9dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="250dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.50"
                    android:text="Luminosidad:" />

                <Spinner
                    android:id="@+id/cbLuminosidad"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:padding="9dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/luminosidad"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="310dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.90"
                    android:text="Estado de la unidad:" />

                <Spinner
                    android:id="@+id/cbEstado"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:padding="9dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/estUni"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="370dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.70"
                    android:text="Cantidad de baños:" />

                <Spinner
                    android:id="@+id/cbCanBan"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:padding="9dp"
                    android:entries="@array/cantCoch"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="430dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.70"
                    android:text="Antigüedad:" />

                <Spinner
                    android:id="@+id/cbAntigDepto"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:padding="9dp"
                    android:entries="@array/antiguedad"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="490dp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/amuebladoDepto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:textColor="@color/letra"
                    android:text="Amueblado" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="550dp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/aptoProfDepto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/letra"
                    android:layout_weight="0.50"
                    android:text="Apto profesional" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="610dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:text="Monto expensas:" />

                <EditText
                    android:id="@+id/etExpDepto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="9dp"
                    android:digits="0123456789"
                    android:inputType="phone"
                    android:textColor="@color/letra"
                    android:background="@drawable/border"
                    android:text="" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/atrCasas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/cocheraCasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:textColor="@color/letra"
                    android:text="Cochera" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.50"
                    android:text="Cantidad de baños:" />

                <Spinner
                    android:id="@+id/cbCantBanosCasa"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:padding="9dp"
                    android:entries="@array/cantCoch"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="130dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.50"
                    android:text="Cantidad dormitorios:" />

                <Spinner
                    android:id="@+id/cbCantDorCasa"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:entries="@array/cantCoch"
                    android:padding="9dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="190dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.50"
                    android:text="Cantidad de plantas:" />

                <Spinner
                    android:id="@+id/cbCantPlanCasa"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:entries="@array/cantCoch"
                    android:padding="9dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="250dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.50"
                    android:text="Antigüedad:" />

                <Spinner
                    android:id="@+id/cbAntCasa"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:padding="9dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/antiguedad"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="310dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.90"
                    android:text="Estado de la unidad:" />

                <Spinner
                    android:id="@+id/cbEstCasa"
                    android:background="@drawable/spinner"
                    android:layout_width="150dp"
                    android:padding="9dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/estUni"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="370dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.70"
                    android:text="Frente del terreno: " />

                <EditText
                    android:id="@+id/etFrenteCasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="9dp"
                    android:digits="0123456789"
                    android:inputType="phone"
                    android:textColor="@color/letra"
                    android:background="@drawable/border"
                    android:text="" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="430dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.70"
                    android:text="Largo del terreno:" />

                <EditText
                    android:id="@+id/etLargoCasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="9dp"
                    android:digits="0123456789"
                    android:inputType="phone"
                    android:textColor="@color/letra"
                    android:background="@drawable/border"
                    android:text="" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="490dp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/amuebladoCasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:textColor="@color/letra"
                    android:text="Amueblado" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="610dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:text="Monto expensas:" />

                <EditText
                    android:id="@+id/etExpCasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="9dp"
                    android:digits="0123456789"
                    android:inputType="phone"
                    android:textColor="@color/letra"
                    android:background="@drawable/border"
                    android:text="" />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>
</ScrollView>